@model Estrrado_RegistrationApp_CoreMVC.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2 class="mt-3">Student Details</h2>

<div class="card p-3 mt-3">
    <div class="row mb-2">
        <div class="col-md-6"><strong>Student ID:</strong> @Model.StudentId</div>
        <div class="col-md-6"><strong>Name:</strong> @Model.FirstName @Model.LastName</div>
    </div>

    <div class="row mb-2">
        <div class="col-md-4"><strong>Age:</strong> @Model.Age</div>
        <div class="col-md-4"><strong>DOB:</strong> @Model.DOB.ToString("yyyy-MM-dd")</div>
        <div class="col-md-4"><strong>Gender:</strong> @Model.Gender</div>
    </div>

    <div class="row mb-2">
        <div class="col-md-6"><strong>Email:</strong> @Model.Email</div>
        <div class="col-md-6"><strong>Phone:</strong> @Model.Phone</div>
    </div>

    <hr />

    <h4>Qualifications</h4>

    @if (Model.Qualifications != null && Model.Qualifications.Any())
    {
        <table class="table table-sm table-bordered mt-2">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>University</th>
                    <th>Year</th>
                    <th>Percentage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var q in Model.Qualifications)
                {
                    <tr>
                        <td>@q.CourseName</td>
                        <td>@q.University</td>
                        <td>@q.YearOfPassing</td>
                        <td>@q.Percentage</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No qualifications added.</p>
    }

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Registration" class="btn btn-secondary">Back to List</a>
    </div>
</div>
