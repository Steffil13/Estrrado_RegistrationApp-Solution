@model Estrrado_RegistrationApp_CoreMVC.Models.Student
@{
    ViewData["Title"] = "Student Registration";
}

<h2 class="mt-3 mb-3 text-center">Student Registration</h2>

<div class="card shadow p-4 mt-3">
    <form asp-action="Create" asp-controller="Registration" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Personal Info -->
            <div class="col-md-6 mb-3">
                <label class="form-label">First Name *</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label">Age *</label>
                <input asp-for="Age" type="number" min="0" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label">Date of Birth *</label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label">Gender *</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Email *</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Phone *</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
        </div>

        <hr />

        <!-- Qualification Section -->
        <h5>Qualification Details</h5>
        <p class="text-muted">Add one or more qualifications below:</p>

        <table class="table table-bordered align-middle" id="qualTable">
            <thead class="table-light">
                <tr>
                    <th>Course Name</th>
                    <th>University</th>
                    <th>Year of Passing</th>
                    <th>Percentage</th>
                    <th style="width:90px">Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- initial row (index 0) -->
                <tr>
                    <td><input name="Qualifications[0].CourseName" class="form-control" /></td>
                    <td><input name="Qualifications[0].University" class="form-control" /></td>
                    <td><input name="Qualifications[0].YearOfPassing" type="number" class="form-control" /></td>
                    <td><input name="Qualifications[0].Percentage" type="number" step="0.01" class="form-control" /></td>
                    <td><button type="button" class="btn btn-sm btn-danger remove-row">Remove</button></td>
                </tr>
            </tbody>
        </table>

        <div class="mb-3">
            <button id="addQual" type="button" class="btn btn-secondary btn-sm">
                + Add Qualification
            </button>
        </div>

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-success px-4">Submit</button>
            <a asp-action="Index" asp-controller="Registration" class="btn btn-outline-secondary ms-2 px-4">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        let qualIndex = 1; // initial index already used (0)

        // Add new qualification row dynamically
        $('#addQual').click(function () {
            const newRow = `
                        <tr>
                            <td><input name="Qualifications[${qualIndex}].CourseName" class="form-control" /></td>
                            <td><input name="Qualifications[${qualIndex}].University" class="form-control" /></td>
                            <td><input name="Qualifications[${qualIndex}].YearOfPassing" type="number" class="form-control" /></td>
                            <td><input name="Qualifications[${qualIndex}].Percentage" type="number" step="0.01" class="form-control" /></td>
                            <td><button type="button" class="btn btn-sm btn-danger remove-row">Remove</button></td>
                        </tr>`;
            $('#qualTable tbody').append(newRow);
            qualIndex++;
        });

        // Remove qualification row
        $(document).on('click', '.remove-row', function () {
            $(this).closest('tr').remove();
        });
    </script>
}
